@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<h2>Cookie Data:
    @HttpContextAccessor.HttpContext.Request.Cookies["username"]</h2>

@{
    ViewData["Title"] = "Home Page";
}

<h1>@TempData["Country"]</h1>


@{

    if (TempData.Peek("Country") != null)
    {
        <h2>Country: @TempData.Peek("Country")</h2>
    }

}



@{

    if (TempData["Country"] != null)
    {
        <h2>Country: @TempData["Country"]</h2>
    }
    TempData.Keep("Country");
}




<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

